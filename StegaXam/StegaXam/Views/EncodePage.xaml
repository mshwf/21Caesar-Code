<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StegaXam.Views.EncodePage"
             xmlns:vm="clr-namespace:StegaXam.ViewModels"
             xmlns:local="clr-namespace:StegaXam;assembly=StegaXam"
             Title="{Binding Title}" Padding="10" 
             BackgroundColor="{StaticResource Primary}">

    <ContentPage.BindingContext>
        <vm:EncodeViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid>
            <StackLayout>
                <Entry x:Name="entryMsg" TextColor="White" Placeholder="Your secret message" MaxLength="255" TextChanged="EntryMsg_TextChanged"/>
                <Grid>
                    <Button Grid.Column="0" Text="Pick Photo" BackgroundColor="{StaticResource Secondary}"
                    Clicked="OnPickPhotoButtonClicked"
                        ImageSource="{local:ImageResource StegaXam.Images.photo.png}"
                        />
                    <Button Grid.Column="1" x:Name="hideBtn" IsEnabled="False" Text="Hide" Clicked="HideClick" 
                        ImageSource="{local:ImageResource StegaXam.Images.hide.png}"
                        BackgroundColor="{StaticResource Secondary}" />
                </Grid>

                <Image x:Name="image" Grid.Row="2"/>

                <Button Grid.Row="4" x:Name="saveBtn" IsVisible="False" Text="Save" 
                    Clicked="SaveClicked" BackgroundColor="{StaticResource Primary}"/>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
