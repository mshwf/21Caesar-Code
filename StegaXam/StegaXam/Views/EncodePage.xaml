<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StegaXam.Views.EncodePage"
             xmlns:vm="clr-namespace:StegaXam.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:EncodeViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Entry Grid.Row="0" x:Name="text" TextColor="Black" Placeholder="Your secret message" 
                   MaxLength="255"/>

            <Button Text="Pick Photo" Grid.Row="1" Background="Green"
                    Clicked="OnPickPhotoButtonClicked" />
            <Image x:Name="image" Grid.Row="2"/>

            <Button Grid.Row="3" Text="Hide" Clicked="HideClick" Background="red"/>
            <Button Grid.Row="4" Text="Save" Clicked="SaveClicked" Background="Blue"/>
        </Grid>
    </ScrollView>
</ContentPage>
