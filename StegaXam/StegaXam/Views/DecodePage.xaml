<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StegaXam.Views.DecodePage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:StegaXam;assembly=StegaXam"
             xmlns:vm="clr-namespace:StegaXam.ViewModels"  
             xmlns:model="clr-namespace:StegaXam.Models" 
             x:DataType="vm:DecodeViewModel"
              Padding="10"
             x:Name="BrowseItemsPage">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Image x:Name="image" Grid.Row="0"/>

            <Button Text="Pick Photo" Grid.Row="2" 
                    BackgroundColor="{StaticResource Secondary}" 
                    Clicked="OnPickPhotoButtonClicked" />

            <Button Grid.Row="3" Text="Read" Clicked="ReadHiddenText_Tapped" BackgroundColor="{StaticResource Secondary}" />
        </Grid>
    </ScrollView>
</ContentPage>
